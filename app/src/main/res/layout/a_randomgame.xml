<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="vm" type="com.compa.test_thread.viewmodel.RandomVM"/>
        <variable name="act" type="com.compa.test_thread.view.game.random.RandomActivity"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:padding="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:onClickListener="@{act}"
                android:id="@+id/btn_backActivity"
                android:transitionName="btn_title"
                app:layout_constraintVertical_chainStyle="spread_inside"
                android:text="Back Activity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tx_hintTitle"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>

        <TextView
                android:id="@+id/tx_hintTitle"
                app:layout_constraintTop_toBottomOf="@+id/btn_backActivity"
                app:layout_constraintBottom_toTopOf="@id/tx_randomTitle"
                android:gravity="center"
                android:hint="1 ~ 10 사이의 숫자를 입력하고\nSTART 버튼을 눌러주세요"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/tx_randomTitle"
                android:gravity="center"
                android:text="랜덤 숫자"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/tx_hintTitle"
                app:layout_constraintBottom_toTopOf="@id/tx_random"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tx_random"
                app:layout_constraintTop_toBottomOf="@id/tx_randomTitle"
                app:layout_constraintBottom_toTopOf="@id/tx_selectTitle"
                android:gravity="center"
                android:textSize="80sp"
                android:text="@{vm.randomNum}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tx_selectTitle"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="현재 선택한 숫자"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/tx_random"
                app:layout_constraintBottom_toTopOf="@id/edit_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:enabled="@{vm.isStart()}"
                android:id="@+id/edit_select"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/tx_selectTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btn_action"
                android:text="@={vm.selectNum}"
                android:nextFocusDown="@id/btn_action"
                android:maxLines="1"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="80sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <Button
                android:onClickListener="@{act}"
                android:enabled="@{vm.isBtnAction()}"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text='@{vm.isStart() ? "START" : "STOP"}'
                android:layout_marginTop="40dp"
                android:elevation="5dp"
                android:id="@+id/btn_action"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_select"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="150dp"
                android:layout_height="100dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
